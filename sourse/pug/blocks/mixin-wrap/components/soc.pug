mixin item-sos(icon, a='#')
	+e.A.item(href= a target="_blank")
		if block
			block
		else
			+icon(icon)
//- social buttons
mixin soc()
	+b.soc
		if block
			block
		else
			+item-sos('fb', 'https://www.facebook.com/100pudov')
			+item-sos('youtube', 'https://www.youtube.com/channel/UC0DPRNDdDJAIYhvDIfY-4wg')
			+item-sos('instagram', 'https://www.instagram.com/stopudov.ua')

